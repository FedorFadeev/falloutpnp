<div>
  <div class="bio-top">
    <table>
      <tr>
        <td>
          <div class="bio-box">
            <span class="span-text">Level</span>
            <input type="number" required name="system.general.level" value="{{system.general.level}}" min="1" />
          </div>
        </td>
        <td style="padding-right: 20px;">
          <div class="bio-box">
            <span class="span-icon">
              <img src="systems/falloutpnp/static/icons/icon-karma.png" alt="Karma" />
            </span>
            <input type="text" name="system.general.karma" value="{{system.general.karma}}" />
            <span class="undertext">Karma</span>
          </div>
        </td>
        <td>
          <div class="bio-box">
            <span class="span-text">EXP</span>
            <input type="text" name="system.general.experience" value="{{system.general.experience}}" min="0" />
            <span class="undertext">Current</span>
          </div>
        </td>
        <td>
          <div class="bio-box">
            <span class="span-text">/</span>
            <div class="styled-div_input-like">{{system.status.experienceToLevel}}</div>
            <span class="undertext">Level Up</span>
          </div>
        </td>
      </tr>
    </table>
  </div>
  <div class="bio-bottom">
    <div class="bio-image">
      <img src="{{data.actor.img}}" title="{{data.actor.name}}" data-edit="img" />
    </div>
    <div class="bio-list">
      <div class="bio-row">
        <table>
          <tr>
            <td>
              <div class="bio-box">
                <input type="text" name="system.general.name" value="{{system.general.name}}" />
                <span class="undertext">Name</span>
              </div>
            </td>
          </tr>
        </table>
      </div>
      <div class="bio-row">
        <table>
          <tr>
            <td>
              <div class="bio-box">
                <select name="system.general.race" style="width: 100%;">
                  {{selectOptions data.config.races selected=system.general.race nameAttr="key" labelAttr="label"}}
                </select>
                <span class="undertext">Race</span>
              </div>
            </td>
            <td>
              <div class="bio-box">
                <input type="text" name="system.general.gender" value="{{system.general.gender}}" />
                <span class="undertext">Gender</span>
              </div>
            </td>
          </tr>
        </table>
      </div>
      <div class="bio-row">
        <table>
          <tr>
            <td>
              <div class="bio-box">
                <input type="text" name="system.general.age" value="{{system.general.age}}" />
                <span class="undertext">Age</span>
              </div>
            </td>
            <td>
              <div class="bio-box">
                <input type="text" name="system.general.height" value="{{system.general.height}}" />
                <span class="undertext">Height</span>
              </div>
            </td>
            <td>
              <div class="bio-box">
                <input type="text" name="system.general.weight" value="{{system.general.weight}}" />
                <span class="undertext">Weight</span>
              </div>
            </td>
          </tr>
        </table>
      </div>
      <div class="bio-row">
        <table>
          <tr>
            <td>
              <div class="bio-box">
                <input type="text" name="system.general.skinTone" value="{{system.general.skinTone}}" />
                <span class="undertext">Skin Tone</span>
              </div>
            </td>
            <td>
              <div class="bio-box">
                <input type="text" name="system.general.hair" value="{{system.general.hair}}" />
                <span class="undertext">Hair</span>
              </div>
            </td>
            <td>
              <div class="bio-box">
                <input type="text" name="system.general.eyes" value="{{system.general.eyes}}" />
                <span class="undertext">Eyes</span>
              </div>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
